<modules xmlns="http://smartics.de/ns/jboss-modules-descriptor/1">
  
  <module name="org.soulwing.cas" slot="main"> 
    <match>
      <includes>
        <include>
          <artifactId>cas-subsystem</artifactId>
        </include>
      </includes>
    </match>
    <apply-to-module>
      <dependencies>
        <module name="org.jboss.staxmapper"/>
        <module name="org.jboss.as.controller"/>
        <module name="org.jboss.as.server"/>
        <module name="org.jboss.modules"/>
        <module name="org.jboss.msc"/>
        <module name="org.jboss.logging"/>
        <module name="org.jboss.vfs"/>
        <module name="org.wildfly.extension.undertow"/>
        <module name="io.undertow.servlet"/>
        <module name="io.undertow.core"/>
        <module name="javax.api"/>
      </dependencies>
    </apply-to-module>
  </module>

  <module name="org.jasig.cas.client">
    <match>
      <includes>
        <include>
          <artifactId>cas-client-core</artifactId>
        </include>
      </includes>
    </match>
    <apply-to-dependencies>
      <dependencies>
        <match>
          <excludes>
            <exclude>commons-codec</exclude>
          </excludes>
        </match>
      </dependencies>
      <apply>
        <export>false</export>
      </apply>
    </apply-to-dependencies>
    <apply-to-module>
      <dependencies>
        <module name="org.opensaml"/>
        <module name="org.apache.commons.codec"/>
        <module name="org.apache.santuario.xmlsec"/>
        <module name="org.slf4j"/>
        <module name="javax.servlet.api"/>
        <module name="javax.api"/>
      </dependencies>
    </apply-to-module>
  </module>  
  
  <module name="org.opensaml">
    <directives>
      <skip>true</skip>
    </directives>
    <match>
      <includes>
        <include>
          <artifactId>opensaml</artifactId>
        </include>
      </includes>
    </match>
  </module>
 
  <module name="org.slf4j.slf4j-api">
    <directives>
      <skip>true</skip>
    </directives>
    <match>
      <includes>
        <include>
          <artifactId>slf4j-api</artifactId>
        </include>
      </includes>
    </match>
  </module>

  <module name="javax.servlet.javax.servlet-api">
    <directives>
      <skip>true</skip>
    </directives>
    <match>
      <includes>
        <include>
          <artifactId>javax.servlet-api</artifactId>
        </include>
      </includes>
    </match>
  </module>
  
</modules>
